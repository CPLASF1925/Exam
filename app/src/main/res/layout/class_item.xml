<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rooter"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_class_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="软件132班"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        />
    <ImageView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/iv_join"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:background="@drawable/join"
        />
    <TextView
        android:id="@+id/tv_join"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:layout_toRightOf="@id/iv_join"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="17人"
        />
    <ImageView
        android:layout_toRightOf="@+id/tv_join"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/iv_submit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:background="@drawable/submit"
        />
    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:layout_toRightOf="@id/iv_submit"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="17人"
        />
    <ImageView
        android:layout_toRightOf="@+id/tv_submit"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/iv_unsubmit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:background="@drawable/unsubmit"
        />
    <TextView
        android:id="@+id/tv_unsubmit"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_class_name"
        android:layout_toRightOf="@id/iv_unsubmit"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="17人"
        />
</RelativeLayout>